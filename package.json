{
  "name": "cortex-ai-monorepo",
  "version": "1.0.1",
  "private": true,
  "description": "The Persistent Memory Toolkit for Node.js AI Applications.",
  "scripts": {
    "clean": "find . -name 'dist' -type d -prune -exec rm -rf '{}' + && find . -name 'tsconfig.tsbuildinfo' -type f -prune -exec rm -rf '{}' +",
    "build": "tsc -b tsconfig.build.json",
    "build:watch": "tsc -b tsconfig.build.json --watch",
    "rebuild": "pnpm run clean && pnpm run build",
    "dev:example": "pnpm --filter cortex-example-secure-api dev",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.0",
    "express": "^4.19.2",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "prettier": "^3.3.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
